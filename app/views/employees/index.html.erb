<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Employees</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @employees.each do |employee| %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="p-6">
          <h2 class="text-xl font-semibold mb-2"><%= "#{employee.first_name} #{employee.last_name}" %></h2>
          <p class="text-gray-600 mb-4"><%= employee.email %></p>
          <div class="mb-4">
            <span class="text-sm font-medium text-gray-500">Country:</span>
            <span class="ml-2 text-gray-900"><%= employee.country %></span>
          </div>
          <div class="mb-4">
            <span class="text-sm font-medium text-gray-500">Rating:</span>
            <span class="ml-2 text-gray-900"><%= sprintf('%.2f', employee.rating) unless  employee.rating.blank? %></span>
          </div>
          <p class="text-gray-700 mb-4 line-clamp-3"><%= employee.bio %></p>
          <a href="#" class="text-blue-600 hover:text-blue-800 font-medium">View Details</a>
        </div>
      </div>
    <% end %>
  </div>
</div>